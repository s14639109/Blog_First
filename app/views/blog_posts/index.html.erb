<% content_for :title, "Blog posts" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

 <%= form_tag blog_posts_path, method: :get, class: "flex space-x-2 mb-4" do %>
    <%= text_field_tag :query, params[:query], placeholder: "搜尋文章標題", class: "border rounded px-2 py-1" %>
    <%= submit_tag "搜尋", class: "bg-blue-600 text-white px-3 py-1 rounded" %>
  <% end %>


  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Blog posts</h1>
    <%= link_to "New blog post", new_blog_post_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

    <div id="blog_posts" class="min-w-full grid md:grid-cols-3 lg:grid-cols-4 gap-4 mt-8">
    <% if @blog_posts.any? %>
      <%= render @blog_posts %>
    <% else %>
      <p class="text-gray-500 text-lg">查無相關文章</p>
    <% end %>
  </div>
  
</div>
